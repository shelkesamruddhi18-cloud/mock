#include <iostream>
using namespace std;

#define MAX 5

class PriorityQueue {
    int pq[MAX];
    int size;

public:
    PriorityQueue() { size = 0; }

    bool isFull()  { return size == MAX; }
    bool isEmpty() { return size == 0; }

    // Insert element by priority
    void insert(int x) {
        if (isFull()) {
            cout << "Priority Queue is Full\n";
            return;
        }

        int i;
        // Shift elements to keep sorted order (descending)
        for (i = size - 1; i >= 0 && pq[i] < x; i--) {
            pq[i + 1] = pq[i];
        }
        pq[i + 1] = x;
        size++;
    }

    // Delete highest priority (first element)
    void remove() {
        if (isEmpty()) {
            cout << "Priority Queue is Empty\n";
            return;
        }

        cout << "Removed: " << pq[0] << endl;

        for (int i = 0; i < size - 1; i++) {
            pq[i] = pq[i + 1];
        }
        size--;
    }

    void display() {
        if (isEmpty()) {
            cout << "Priority Queue is Empty\n";
            return;
        }

        cout << "Priority Queue: ";
        for (int i = 0; i < size; i++) {
            cout << pq[i] << " ";
        }
        cout << endl;
    }
};

int main() {
    PriorityQueue p;
    int ch, val;

    while (1) {
        cout << "\n1. Insert\n2. Delete\n3. Display\n4. Exit\nEnter choice: ";
        cin >> ch;

        switch (ch) {
        case 1:
            cout << "Enter value: ";
            cin >> val;
            p.insert(val);
            break;

        case 2:
            p.remove();
            break;

        case 3:
            p.display();
            break;

        case 4:
            return 0;

        default:
            cout << "Invalid Choice\n";
        }
    }
}
